# TaskFlow - Variables de Entorno Ejemplo
# Copia este archivo a .env en cada proyecto y ajusta los valores

# ===== API BACKEND (taskflow-api/.env) =====
DEBUG=True
SECRET_KEY=tu-secret-key-api-aqui-cambia-esto
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:9000,http://127.0.0.1:9000

# Base de datos (opcional, usa SQLite por defecto)
# DATABASE_URL=postgresql://user:password@localhost:5432/taskflow_db

# JWT Settings
SIMPLE_JWT_ACCESS_TOKEN_LIFETIME=15
SIMPLE_JWT_REFRESH_TOKEN_LIFETIME=7

# ===== FRONTEND WEB (taskflow_web/.env) =====
DEBUG=True
SECRET_KEY=tu-secret-key-web-aqui-cambia-esto
ALLOWED_HOSTS=localhost,127.0.0.1

# API Configuration
API_BASE_URL=http://localhost:8000/api

# Base de datos (opcional, usa SQLite por defecto)
# DATABASE_URL=postgresql://user:password@localhost:5432/taskflow_web_db

# Session Settings
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
